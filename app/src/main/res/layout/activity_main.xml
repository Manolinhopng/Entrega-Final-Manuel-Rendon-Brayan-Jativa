<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/diplomata"
        android:text="@string/gym_ntracker"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <!-- Logo y tÃ­tulo -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/logo_de_gym_tracker"
        android:src="@drawable/gym_logo" />

    <!-- Campo Correo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/correo"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/correo_ejemplo_com"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        tools:ignore="Autofill" />

    <!-- Campo ContraseÃ±a -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/contrase_a"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/hint_s"
        android:inputType="textPassword"
        android:padding="12dp"
        tools:ignore="Autofill" />

    <!-- Checkbox RecuÃ©rdame -->
    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:text="@string/recu_rdame" />

    <!-- BotÃ³n Login -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#333333"
        android:padding="12dp"
        android:text="@string/login"
        android:textColor="#FFFFFF" />

    <!-- ðŸ”— Enlace para registrarse -->
    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="48dp"
        android:text="@string/no_tienes_cuenta_reg_strate_aqu"
        android:textColor="#0000FF"
        android:textSize="14sp" />


</LinearLayout>