<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Logo más pequeño -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gym_logo"
        android:contentDescription="Logo de Gym Tracker"
        android:layout_marginBottom="24dp" />

    <!-- ScrollView para permitir desplazamiento -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Contenedor con fondo gris claro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="¿Cómo te llamas?"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- Edad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="¿Cuántos años tienes?"
                android:inputType="number"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Ej: email@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Crea una contraseña"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- Peso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Kilos"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/etAltura"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Centímetros"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp" />

            <!-- Género -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <Spinner
                android:id="@+id/spinnerGenero"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_background"
                android:padding="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Aceptar términos -->
            <CheckBox
                android:id="@+id/checkTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Aceptar términos y condiciones"
                android:textSize="14sp" />

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Registrarse"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>